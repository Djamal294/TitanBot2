<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#121212">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="16dp">

        <TextView
            android:id="@+id/dashboardView"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="#1E1E1E"
            android:padding="12dp"
            android:text="ðŸ›¡ï¸ Titan Bot: Ready"
            android:textColor="#BB86FC"
            android:textSize="14sp" />

        <TextView
            android:id="@+id/aiStatusView"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="8dp"
            android:background="#252525"
            android:padding="8dp"
            android:text="ðŸ¤– AI Intel: Waiting for link..."
            android:textColor="#03DAC6"
            android:textSize="12sp" />

        <EditText
            android:id="@+id/linkInput"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="16dp"
            android:hint="Paste Adsterra Direct Link"
            android:textColor="#FFFFFF"
            android:textColorHint="#666666" />

        <LinearLayout
            android:id="@+id/webContainer"
            android:layout_width="match_parent"
            android:layout_height="220dp"
            android:layout_marginTop="16dp"
            android:orientation="horizontal"
            android:weightSum="3"
            android:background="#000000" />

        <Button
            android:id="@+id/controlButton"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="16dp"
            android:backgroundTint="#BB86FC"
            android:text="LAUNCH TRIPLE AI ENGINE"
            android:textColor="#000000" />

    </LinearLayout>
</ScrollView>
