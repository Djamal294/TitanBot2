<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="#0D0D0D"
    android:padding="10dp">

    <TextView
        android:id="@+id/serverCountView"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="ðŸŒ Proxies: 0"
        android:textColor="#00FFCC"
        android:textStyle="bold"
        android:gravity="center"
        android:background="#1A1A1A"
        android:padding="10dp"
        android:layout_marginBottom="5dp"/>

    <TextView
        android:id="@+id/dashboardView"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="ðŸ’° Jumps: 0"
        android:textColor="#FFD700"
        android:textStyle="bold"
        android:gravity="center"
        android:background="#1A1A1A"
        android:padding="10dp"
        android:layout_marginBottom="10dp"/>

    <TextView
        android:id="@+id/aiStatusView"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="ðŸ¤– Waiting..."
        android:textColor="#888888"
        android:gravity="center"
        android:textSize="12sp"
        android:layout_marginBottom="10dp"/>

    <EditText
        android:id="@+id/linkInput"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="Link here..."
        android:textColor="#FFFFFF"
        android:textColorHint="#555555"
        android:background="#222222"
        android:padding="12dp"
        android:layout_marginBottom="10dp"/>

    <LinearLayout
        android:id="@+id/webContainer"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:orientation="vertical"
        android:background="#000000">

        <WebView
            android:id="@+id/webview_1"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:layout_marginBottom="2dp"/>

        <WebView
            android:id="@+id/webview_2"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:layout_marginBottom="2dp"/>

        <WebView
            android:id="@+id/webview_3"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1"/>
            
    </LinearLayout>

    <Button
        android:id="@+id/controlButton"
        android:layout_width="match_parent"
        android:layout_height="55dp"
        android:text="ðŸš€ START V13"
        android:textSize="18sp"
        android:textStyle="bold"
        android:backgroundTint="#6200EE"
        android:textColor="#FFFFFF"/>

</LinearLayout>
